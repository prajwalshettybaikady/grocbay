{% extends '@AppBundle/Admin/base.html.twig' %}
{% block styles %}
<link rel="stylesheet" type="text/css" media="all" href="/assets/css/star/rating.css"/>
{% endblock %}

{% block body %}

<!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <!-- Row -->
    <div class="row">
            <!-- Column -->
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        
                        {% set iconImage = "" %}
                        {% if restaurant.iconImage != null %}
                            {% set iconImage = '/uploads/restaurant/icons/'~restaurant.iconImage %}
                        {% endif %}
                        <center class="m-t-30"> <img src="{{iconImage}}" class="img-circle" width="150" />
                            <h4 class="card-title m-t-10">{{ restaurant.restaurantName }}</h4>
                            <h6 class="card-subtitle">{{ restaurant.restaurantAddress }}</h6>
                            <div class="row text-center justify-content-md-center">
                                <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-people"></i> <font class="font-medium">254</font></a></div>
                                <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">54</font></a></div>
                            </div>
                            <div class="row m-t-20" >
                                <div class="rating-wrap text-left" style="margin:0 auto;">
                                    <div class="star-ratings-sprite pull-left">
                                        <span style="width:{{ restaurant.popularity * 20 }}%" class="star-ratings-sprite-rating"></span>
                                    </div>
                                    <span class="star-count pull-left margin-left-5">({{restaurant.popularity}})</span>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="row m-t-10">
                                <a class="btn btn-warning text-white form-control " href="{{ path('restaurant_edit',{'id':restaurant.id}) }}">Edit Restaurant</a>
                            </div>
                        
                        </center>
                    </div>
                    <div>
                        <hr> </div>
                    <div class="card-body"> 
                        <small class="text-muted">Primary Email address </small>
                        <h6>{{ restaurant.primaryEmail }}</h6> 
                        <small class="text-muted">Secondary Email address </small>
                        <h6>{{ (restaurant.secondaryEmail == null)?"Not mentioned":restaurant.secondaryEmail }}</h6> 
                        <small class="text-muted p-t-30 db">Primary mobile number</small>
                        <h6>{{ restaurant.primaryMobile }}</h6> 
                        <small class="text-muted">Secondary mobile number </small>
                        <h6>{{ (restaurant.secondaryMobile == null)?"Not mentioned":restaurant.secondaryMobile }}</h6> 


                        <small class="text-muted p-t-30 db">Restaurant timings</small>
                        <div class="row text-success justify-content-md-center p-t-20">
                            <div class="col-12">
                                <p>{{ restaurant.openTime|date('h:i a') ~ " To " ~ restaurant.closeTime|date('h:i a')}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs profile-tab" role="tablist">
                        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#r-menu" role="tab">Restaurant Menu</a> </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#latest-orders" role="tab">Latest Orders</a> </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#restaurant-review" role="tab">Reviews</a> </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#restaurant-staff" role="tab">Admins</a> </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="r-menu" role="tabpanel">
                            <div class="card-body">
                                <div class="col-xs-12">
                                    <span class="pull-right">
                                        <a href="{{ path('restaurant_add_menu_item',{'restName':restaurant.restaurantSlug}) }}" class="btn btn-primary btn-sm"> Add new item</a>
                                    </span>
                                </div>
                                    <div class="table-responsive m-t-10">
                                        <table id="myTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Product Name</th>
                                                    <th>Category</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for product in restaurant.menuItem %}
                                                <tr>
                                                    <td>{{ product.itemName }}</td>
                                                    <td>{{ product.category }}</td>
                                                    <td>
                                                        <a href="{{ path('restaurant_view_menu_item',{'id':product.id})}}" title="Edit" class="btn btn-primary btn-sm">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                        <a href="{{ path('restaurant_edit_menu_item',{'id':product.id})}}" title="Edit" class="btn btn-primary btn-sm">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                        </div>
                        <!--second tab-->
                        <div class="tab-pane" id="restaurant-review" role="tabpanel">
                            <div class="card-body">
                                <div class="col-xs-12">
                                </div>
                                    <div class="table-responsive m-t-10" id="rest-review-app">
                                        <table id="myTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Customer</th>
                                                    <th>Ratings</th>
                                                    <th>Reviews</th>
                                                    <th item-width="50px">
                                                        <a href="javascript:;"><i class="fa fa-cog"></i></a>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for rating in restaurant.restaurantRatings %}
                                                    <tr id="ratings_row_{{rating.id}}">
                                                        <td> <a href="{{ path('customer_view',{'id':rating.customer.id}) }}">{{ rating.customer.username }}</a> </td>
                                                        <td>
                                                            <div class="rating-wrap text-left margin-top-10">
                                                                <div class="star-ratings-sprite pull-left">
                                                                    <span style="width:{{ rating.ratings * 20 }}%" class="star-ratings-sprite-rating"></span>
                                                                </div>
                                                                <span class="star-count pull-left margin-left-5">({{rating.ratings}})</span>
                                                                <div class="clearfix"></div>
                                                            </div>
                                                        </td>
                                                        <td>{{ rating.reviews }}</td>
                                                        <td width="50px">
                                                            <a href="javascript:;" class="btn btn-danger btn-sm" v-on:click="deleteThis({{ rating.id }})">
                                                                <i class="fa fa-trash"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                            </div>
                        </div>
                        <!--second tab-->
                        <div class="tab-pane" id="latest-orders" role="tabpanel">
                            <div class="card-body">
                                <div class="table-responsive m-t-10">
                                    <table id="myTableq" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Order Date</th>
                                                <th>Status</th>
                                                <th>Order Amount</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for order in restaurant.customerOrder|reverse %}
                                                <tr>
                                                    <td>{{ order.id }}</td>
                                                    <td>{{ order.orderDate|date('d F Y') }}</td>
                                                    <td>{{ order.orderStatus }}</td>
                                                    <td>{{ order.orderAmount }}</td>
                                                    <td>  
                                                        <a href="{{ path('restaurant_orders_panel_update',{'id':order.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-eye"></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="restaurant-staff" role="tabpanel">
                            <div class="card-body">
                                <div class="table-responsive m-t-10">
                                    <table id="myTable" class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Email Id</th>
                                                <th>Mobile Number</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for user in restaurant.user %}
                                            <tr>
                                                <td>{{ user.firstName ~ " " ~ user.lastName }}</td>
                                                <td>{{ user.email }}</td>
                                                <td>{{ user.mobileNumber }}</td>
                                                <td>
                                                    <a href="{{ path('restaurant_admin_edit',{'id':user.id})}}" title="Edit" class="btn btn-primary btn-sm">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="clearfix"></div>
                                <div>
                                    <a href="{{ path('restaurant_admin_create',{'id':restaurant.id}) }}" class="btn btn-primary btn-sm">Add new admin</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
        <!-- Row -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
{% endblock %}


{% block scripts %}

<script src="/assets/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/assets/vue/custom/customer-review.js"></script>
<script>
    $(document).ready(function() {
        $('#myTable').DataTable();
        $('#myTableq').DataTable();
    });
</script>
{% endblock %}