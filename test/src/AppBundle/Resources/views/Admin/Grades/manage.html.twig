        </form>
      </div>
      
    </div>
  </div>
  




<div class="row">
    <div class="col-md-12">
        <div class="card">
            {# {{ path('category_create') }} #}
            <div class="card-body">
                   <h4 class="card-title">Manage Grades<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" style="float:right;">
                Create New</button></h4>
  

                <table class="table table-hovered" id="myTable">
                    <thead>
                    <tr>
                      <th>#</th>
                        <th>Grade</th>                        
                        <th>Action</th>
                    </tr>
                    
                </thead>
                {% set count =  1 %}
                {% for da in data %}
                <tr>
                  <td>{{ count }}</td>
                  <td>{{ da.name }}</td>
                    <td><a href="#edit"   class="btn btn-primary btn-sm" data-toggle="modal" data-target="#edit{{ da.id }}"><i class="fa fa-edit"></i></a > | <a href="{{ path('remove_grades',{'id':da.id}) }}"   class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a ></td>
                  </tr>

                    <div class="modal fade" id="edit{{ da.id }}" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Manage Grades</h4>
        </div>
        <div class="modal-body">
          <form method="post" action="{{ path('edit_grades') }}">

<div class="form-group">
  <label>Grade Identifier</label>
  <input type="text" class="form-control" placeholder="A" name="name" value="{{ da.name }}">
  <input type="hidden" class="form-control" placeholder="A" name="id" value="{{ da.id }}">
</div>

          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Save</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
        </form>
      </div>
      
    </div>
  </div>
  

                                {% set count = count + 1%}

             {% endfor %}
                      </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
