                             <div class="form-group col-md-4">
                            <label>Purchase Id *</label>
                            <input type="text" name="ref" class="form-control" required="" value="{{ random() }}"  readonly>

                        </div>
                        <div class="form-group col-md-4">
                            <label>Date *</label>
                            <input type="text" name="date" class="form-control" required="" id = "datepicker-13" >

